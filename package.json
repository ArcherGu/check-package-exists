{
  "name": "check-package-exists",
  "version": "0.0.0-development",
  "description": "Check if the npm package exists",
  "author": "ArcherGu",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ArcherGu/check-package-exists.git"
  },
  "keywords": [
    "npm",
    "package",
    "exists"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm --splitting --clean",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "execa": "^5.0.0",
    "global-dirs": "^3.0.0",
    "resolve": "^1.22.0"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "0.0.2",
    "@types/node": "17.0.38",
    "@types/resolve": "1.20.2",
    "eslint": "8.19.0",
    "lint-staged": "13.0.3",
    "simple-git-hooks": "2.8.0",
    "tsup": "6.1.2",
    "typescript": "4.7.4",
    "vitest": "0.16.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  }
}
