{
  "name": "check-package-exists",
  "version": "0.0.0-development",
  "packageManager": "pnpm@7.16.0",
  "description": "Check if the npm package exists",
  "author": "ArcherGu",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ArcherGu/check-package-exists.git"
  },
  "keywords": [
    "npm",
    "package",
    "exists"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm --splitting --clean",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "execa": "^5.0.0",
    "global-dirs": "^3.0.0",
    "resolve": "^1.22.0"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "0.0.8",
    "@types/node": "18.11.9",
    "@types/resolve": "1.20.2",
    "eslint": "8.27.0",
    "lint-staged": "13.0.3",
    "simple-git-hooks": "2.8.1",
    "tsup": "6.4.0",
    "typescript": "4.8.4",
    "vitest": "0.25.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
    ]
  }
}
