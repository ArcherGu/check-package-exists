{
  "name": "check-package-exists",
  "version": "0.0.0-development",
  "packageManager": "pnpm@10.28.2",
  "description": "Check if the npm package exists",
  "author": "ArcherGu",
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/ArcherGu/check-package-exists.git"
  },
  "keywords": [
    "npm",
    "package",
    "exists"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@esm2cjs/execa": "6.1.1-cjs.1",
    "global-dirs": "^4.0.0",
    "resolve": "^1.22.11"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "1.0.143",
    "@types/node": "24.10.10",
    "@types/resolve": "1.20.6",
    "eslint": "9.39.2",
    "lint-staged": "16.2.7",
    "simple-git-hooks": "2.13.1",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
    ]
  }
}
